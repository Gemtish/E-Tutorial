<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>StudyHub ET</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; background: #f5f5f5; }
    h1 { text-align: center; }
    .container { max-width: 600px; margin: auto; background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
    button { padding: 10px 20px; margin: 5px; cursor: pointer; }
    .hidden { display: none; }
  </style>
</head>
<body>
  <h1>StudyHub ET</h1>
  <div class="container">
    <div id="menu">
      <button onclick="startQuiz()">Start Quiz</button>
      <button onclick="startPomodoro()">Start Pomodoro</button>
      <button onclick="viewProgress()">View Progress</button>
    </div>

    <div id="quiz" class="hidden">
      <h2 id="question"></h2>
      <div id="answers"></div>
      <button onclick="nextQuestion()">Next</button>
    </div>

    <div id="pomodoro" class="hidden">
      <h2>Pomodoro Timer</h2>
      <p id="timer">25:00</p>
      <button onclick="stopPomodoro()">Stop</button>
    </div>

    <div id="progress" class="hidden">
      <h2>Your Progress</h2>
      <p id="score">0 / 0</p>
      <button onclick="backToMenu()">Back</button>
    </div>
  </div>

  <script>
    // ===== Sample Quiz Data =====
    const quizData = [
      { q: "What is 2 + 2?", a: ["3","4","5","6"], correct: 1 },
      { q: "Newton's second law?", a: ["F=ma","E=mcÂ²","V=IR","P=VI"], correct: 0 }
    ];

    let currentQ = 0;
    let score = 0;
    let pomodoroInterval;
    let pomodoroTime = 25 * 60; // 25 min

    function startQuiz() {
      document.getElementById('menu').classList.add('hidden');
      document.getElementById('quiz').classList.remove('hidden');
      currentQ = 0; score = 0;
      showQuestion();
    }

    function showQuestion() {
      const q = quizData[currentQ];
      document.getElementById('question').innerText = q.q;
      const ansDiv = document.getElementById('answers');
      ansDiv.innerHTML = '';
      q.a.forEach((ans, i) => {
        const btn = document.createElement('button');
        btn.innerText = ans;
        btn.onclick = () => { if(i === q.correct) score++; };
        ansDiv.appendChild(btn);
      });
    }

    function nextQuestion() {
      currentQ++;
      if(currentQ < quizData.length) showQuestion();
      else showProgress();
    }

    function showProgress() {
      document.getElementById('quiz').classList.add('hidden');
      document.getElementById('progress').classList.remove('hidden');
      document.getElementById('score').innerText = `${score} / ${quizData.length}`;
    }

    function backToMenu() {
      document.getElementById('progress').classList.add('hidden');
      document.getElementById('menu').classList.remove('hidden');
    }

    // ===== Pomodoro Timer =====
    function startPomodoro() {
      document.getElementById('menu').classList.add('hidden');
      document.getElementById('pomodoro').classList.remove('hidden');
      updateTimer();
      pomodoroInterval = setInterval(() => {
        pomodoroTime--;
        updateTimer();
        if(pomodoroTime <= 0) { clearInterval(pomodoroInterval); alert("Pomodoro finished!"); pomodoroTime = 25*60; backToMenu(); }
      }, 1000);
    }

    function updateTimer() {
      const m = String(Math.floor(pomodoroTime/60)).padStart(2,'0');
      const s = String(pomodoroTime%60).padStart(2,'0');
      document.getElementById('timer').innerText = `${m}:${s}`;
    }

    function stopPomodoro() {
      clearInterval(pomodoroInterval);
      pomodoroTime = 25*60;
      backToMenu();
    }

    function viewProgress() {
      document.getElementById('menu').classList.add('hidden');
      document.getElementById('progress').classList.remove('hidden');
      document.getElementById('score').innerText = `${score} / ${quizData.length}`;
    }
  </script>
</body>
</html>
